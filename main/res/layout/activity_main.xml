<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewGraph"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_margin="20dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/date">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2">

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/piechart"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:padding="8dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <View
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="#FFA726" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Dépenses" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <View
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="#66BB6A" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Gains" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:text="Date"
        android:textSize="50dp"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="InvalidId" />
    <TextView
        android:id="@+id/libre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="rest"
        android:textSize="20dp"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="@id/cardViewGraph"
        app:layout_constraintTop_toBottomOf="@id/cardViewGraph"
        tools:ignore="InvalidId" />
    <TextView
        android:id="@+id/eparne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="eparne"
        android:textSize="20dp"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="@id/date"
        app:layout_constraintRight_toLeftOf="@id/coter"
        app:layout_constraintTop_toBottomOf="@id/cardViewGraph"
        tools:ignore="InvalidId" />
    <TextView
        android:id="@+id/rest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="20dp"
        android:textColor="@color/black"
        app:layout_constraintLeft_toRightOf="@id/libre"
        app:layout_constraintTop_toBottomOf="@id/cardViewGraph"
        tools:ignore="InvalidId" />
    <TextView
        android:id="@+id/coter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="20dp"
        android:textColor="@color/black"
        app:layout_constraintLeft_toRightOf="@id/eparne"
        app:layout_constraintTop_toBottomOf="@id/cardViewGraph"
        tools:ignore="InvalidId" />
    <Button
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ajout revenu/dépense"
        android:backgroundTint="@color/colorAccent"
        app:layout_constraintTop_toBottomOf="@id/eparne"
        app:layout_constraintLeft_toLeftOf="@id/libre"
        />
    <Button
        android:id="@+id/addEparne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ajout éparne %"
        android:backgroundTint="@color/colorAccent"
        app:layout_constraintTop_toBottomOf="@id/eparne"
        app:layout_constraintLeft_toRightOf="@id/add"
        />
    <TextView
        android:id="@+id/pourcent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="% éparne"
        app:layout_constraintRight_toLeftOf="@id/date"
        app:layout_constraintBottom_toTopOf="@id/cardViewGraph"
        />
    <TextView
        android:id="@+id/pourcentEparne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="0"
        app:layout_constraintRight_toLeftOf="@id/pourcent"
        app:layout_constraintBottom_toTopOf="@id/cardViewGraph"/>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/add"
        app:layout_constraintBottom_toTopOf="@+id/page"/>
    <androidx.viewpager2.widget.ViewPager2
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/page"
        android:layout_width="403dp"
        android:layout_height="308dp"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="379dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>